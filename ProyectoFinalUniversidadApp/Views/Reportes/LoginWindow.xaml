<Window x:Class="ProyectoFinalUniversidadApp.Views.Reportes.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalUniversidadApp.Views.Reportes"
        mc:Ignorable="d"
        Title="Iniciar Sesión" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBox Name="UsernameTextBox" Margin="0,0,0,10" />
        <PasswordBox Name="PasswordBox" Margin="0,0,0,10" />
        <Button Content="Iniciar Sesión" Click="OnLoginClick"/>
    </StackPanel>
</Window>